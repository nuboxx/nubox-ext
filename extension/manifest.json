{
  "name": "nuBoxx",
  "version": "1.0.0",
  "manifest_version": 2,
  "author": "Robin Thomas",
  "permissions": [
    "declarativeContent",
    "tabs",
    "nativeMessaging",
    "*://*/*",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "icons": {
    "128": "icons/logo_128x128.png"
  },
  "browser_action": {
    "default_title": "nuBoxx",
    "default_popup": "public/popup.html",
    "default_icon": {
      "128": "public/logo_128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["build/content.js"],
      "run_at": "document_start"
    }
  ]
}
